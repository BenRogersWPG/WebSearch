{
	"name": "websearchengine",
	"displayName": "Web Search",
	"icon": "icon.png",
	"description": "Search for selected text on your favorite search engine (customizable in settings)",
	"version": "1.0.0",
	"publisher": "BenRogersWPG",
	"author": {
		"name": "Ben Rogers"
	},
	"homepage": "https://github.com/BenRogersWPG/WebSearch/blob/master/README.md",
	"license": "SEE LICENSE IN LICENSE.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/BenRogersWPG/WebSearch"
	},
	"bugs": "https://github.com/BenRogersWPG/WebSearch/issues",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Search",
		"Google",
		"Research",
		"Browser",
		"Web",
		"Customizable",
		"Settings",
		"Research",
		"Menu"
	],
	"extensionKind": [
		"workspace",
		"ui"
	],
	"activationEvents": [
		"onCommand:WebSearch.webSearch",
		"onCommand:WebSearch.webSearchMenu"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "WebSearch.webSearch",
				"title": "Web Search: look up selected text in your search engine of choice"
			},
			{
				"command": "WebSearch.webSearchMenu",
				"title": "Web Search selected text"
			}
		],
		"configuration": {
			"type": "string",
			"title": "Web Search - Search Engine",
			"properties": {
				"webSearch.searchEngine": {
					"type": "string",
					"default": "https://www.google.com/search?q=%s",
					"markdownDescription": "Search engine to use for the Web Search extension. Replace the query with ```%s```, e.g. ```https://www.google.com/search?q=%s```, the same way as you would when adding additional search engines to the Chrome browser settings.",
					"scope": "resource"
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "WebSearch.webSearchMenu",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"axios": "^0.26.1",
		"fast-xml-parser": "^4.0.7"
	}
}